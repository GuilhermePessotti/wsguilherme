package repeticao;

import javax.swing.JOptionPane;

public class DesafioDO {
	
	public static void main(String[] args) {
		/*
		 * Missão1
		 * O jogador um digita um numero inteiro.
		 * A partir dai o jogador 2 deve advinhar o numero,
		 * somente quando ele acertar deverá aparecer a mensagem
		 * Parabens, voce acertou.
		 * 
		 * Missão 2
		 * Acrescente dicas para o jogador2, informando se o numero que ele tem 
		 * que adivinhar é maior ou menor que o numero que ele esta digitando.
		 * 
		 * Missão3:
		 * Acrescente um contador de tentativas, que será exibido quando
		 * o jogador 2 acertar, a mensagem deverá ser:
		 * "parabens, voce acertou com X tentativas(s)".
		 * Dica terão que criar uma variavel para contar.
		 * 
		 */
		
		int numero1 = 0;
		int numero2 = 0;
		
		do {
			numero1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1: favor digitar o numero"));
			numero2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: Qual numero o primeiro digitou ?"));
		}
		while(numero1 != numero2) {
			numero2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: Tente novamente o numero não esta igual"));
		}
		
		System.out.println("Parabens Voce acertou !!!!");
	}

}
