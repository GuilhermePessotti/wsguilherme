package repeticao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	
	public static void main(String[] args) {
		
		
		/*
		 * Exercicio 3
		 * Solicite ao usuário (enquanto ele quiser), o cargo e o salario do cargo.
		 * No final exiba:
		 * - total de todos os salarios
		 * - média
		 * - o maior valor entre todos os salários que foram digitados, com o cargo.
		 * 
		 * 
		 */
		String cargo = "";
		float salario = 0;

		
		if(JOptionPane.showConfirmDialog
				(null,"Deseja informar o cargo e salario ? ", "Titulo", JOptionPane.YES_NO_OPTION)==0){
		
		do {
			cargo = JOptionPane.showInputDialog("Digite o cargo: ").toUpperCase();
			salario = Float.parseFloat(JOptionPane.showInputDialog("Digite o salario: "));
			System.out.println("Cargo: " + cargo + "com salario: " + salario + "adicionados.");
			
		}while(JOptionPane.showConfirmDialog
				(null,"Deseja informar um novo cargo ?", "Titulo", JOptionPane.YES_NO_OPTION)==0);
	
		}
		
		System.out.println(""  );
		
	}

}
